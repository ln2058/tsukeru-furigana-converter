{
  "manifest_version": 3,
  "name": "__MSG_manifest_name__",
  "version": "3.1.1",
  "description": "__MSG_manifest_description__",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://www.ezfurigana.com/*",
    "*://*.ezfurigana.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content-dom.js",
        "js/content-tooltip.js",
        "js/content-main.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "commands": {
    "toggle-furigana": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "__MSG_command_toggle_furigana_description__"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tsukeru-furigana@example.com",
      "strict_min_version": "109.0"
    }
  }
}
